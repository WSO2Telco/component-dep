<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <groupId>com.wso2telco.dep</groupId>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.wso2telco.dep</groupId>
        <artifactId>component-dep</artifactId>
        <version>2.4.5-SNAPSHOT</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <artifactId>publisher</artifactId>
    <packaging>pom</packaging>


    <name>WSO2.Telco Publisher</name>
    <description>publisher jageryapp</description>
    <properties>
        <CApp.type>jaggery/app</CApp.type>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <buildcommands>
                        <buildcommand>org.eclipse.jdt.core.javabuilder</buildcommand>
                    </buildcommands>
                    <directory>target</directory>
                    <outputDirectory>${plugin.name}</outputDirectory>
                    <projectnatures>
                        <projectnature>org.eclipse.php.core.JAGNature</projectnature>
                        <projectnature>org.eclipse.jdt.core.javanature</projectnature>
                    </projectnatures>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>publisher</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>

                    <descriptor>zip-descriptor.xml</descriptor>
                </configuration>
            </plugin>
        </plugins>
        <finalName>publisher</finalName>
    </build>
</project>
