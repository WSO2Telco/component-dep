<?xml version="1.0" encoding="UTF-8"?><api xmlns="http://ws.apache.org/ns/synapse" name="admin--location" context="/location" version="v1" version-type="url">
    <resource methods="POST GET OPTIONS DELETE PUT" url-mapping="/*">
        <inSequence>
            <class name="org.wso2.carbon.apimgt.gateway.mediators.TokenPasser"/>
            <property name="POST_TO_URI" value="true" scope="axis2"/>
            <filter source="$ctx:AM_KEY_TYPE" regex="PRODUCTION">
                     <then>
          <class name="com.wso2telco.mediator.HandlerMediator">
                  <property name="executorClass" value="com.wso2telco.mediator.impl.LocationExecutor"/>
          </class>
          <loopback/>
        </then>
                <else>
                    <send>
                        <endpoint name="admin--location_APIsandboxEndpoint_0">
                            <http uri-template="http://localhost:9763/mifesandbox/SandboxController/location/1">
                                <timeout>
                                    <duration>30000</duration>
                                    <responseAction>fault</responseAction>
                                </timeout>
                                <suspendOnFailure>
                                    <errorCodes>-1</errorCodes>
                                    <initialDuration>0</initialDuration>
                                    <progressionFactor>1.0</progressionFactor>
                                    <maximumDuration>0</maximumDuration>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <errorCodes>-1</errorCodes>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </send>
                </else>
            </filter>
        </inSequence>
        <outSequence>
          <header action="remove" name="To"/>
          <property action="remove" name="NO_ENTITY_BODY" scope="axis2"/>
          <property name="RESPONSE" value="true"/>
          <send/>
        </outSequence>
	<faultSequence>
      		<property expression="$ctx:ERROR_CODE" name="ERROR_CODE" scope="default" type="STRING"/>
      		<sequence key="custom_fault"/>
    	</faultSequence>
    </resource>
    <handlers>
        <handler class="org.wso2.carbon.apimgt.gateway.handlers.security.APIAuthenticationHandler"/>

        <handler class="org.wso2.carbon.apimgt.gateway.handlers.throttling.APIThrottleHandler">
            <property name="id" value="A"/>
            <property name="policyKey" value="gov:/apimgt/applicationdata/tiers.xml"/>
        </handler>
        <handler class="com.wso2telco.verificationhandler.verifier.DialogAPIRequestHandler"/>
        <handler class="org.wso2.carbon.apimgt.usage.publisher.APIMgtGoogleAnalyticsTrackingHandler">
            <property name="configKey" value="gov:/apimgt/statistics/ga-config.xml"/>
        </handler>
        <handler class="org.wso2.carbon.apimgt.gateway.handlers.ext.APIManagerExtensionHandler"/>
        <handler class="com.wso2telco.verificationhandler.verifier.DialogBlacklistHandler"/>
    </handlers>
</api>
