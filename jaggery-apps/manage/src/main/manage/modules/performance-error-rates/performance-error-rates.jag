function getErrorResponseCodes(fromDate, toDate, subscriber, application, operator, api){
	var log = new Log();
	log.info("*****************************************");

	/*Identify the Operator*/
	if(isAdmin != true && isOperator != null){
		operator = isOperator;
	}

	/*Identify the Subscriber*/
	if (isAdmin != true && isOperator == null) {
		subscriber = jagg.getUser().username;
	}

	log.info("From: " + stringify(fromDate));
	log.info("To: " + stringify(toDate));
	log.info("Subscriber: " + stringify(subscriber));
	log.info("Application: " + stringify(application));
	log.info("Operator: " + stringify(operator));
	log.info("API: " + stringify(api));

	var billing = jagg.module("manager").getCustomBilling();
	var error_response_codes_for_pieChart = [];
	var error_response_codes_for_histogram = [];
	try {
		error_response_codes_for_pieChart = billing.getErrorResponseCodesForPieChart(fromDate, toDate, subscriber, application, operator, api);
		log.info("API Requests Data for Pie Chart: " + stringify(error_response_codes_for_pieChart));

		error_response_codes_for_histogram = billing.getErrorResponseCodesForHistogram(fromDate, toDate, subscriber, application, operator, api);
		log.info("API Requests Data for Histogram: " + stringify(error_response_codes_for_histogram));

		return {error:false, pieChart : error_response_codes_for_pieChart, histogram : error_response_codes_for_histogram};
	} catch (e) {
		log.error(e.message);
		return { error:true,message:e.message};
	}
}
%>
